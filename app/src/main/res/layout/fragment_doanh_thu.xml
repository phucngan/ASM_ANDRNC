<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mausac1"
    tools:context=".Fragment.DoanhThuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnTu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="15dp"
            android:text="Từ Ngày"
            app:layout_constraintBaseline_toBaselineOf="@+id/edTuNgay"
            app:layout_constraintEnd_toStartOf="@+id/edTuNgay"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="15dp"
            android:text="Đến Ngày"
            app:layout_constraintBaseline_toBaselineOf="@+id/edDenNgay"
            app:layout_constraintEnd_toStartOf="@+id/edDenNgay"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edTuNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnTu"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edDenNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDen"
            app:layout_constraintTop_toBottomOf="@+id/edTuNgay" />

        <TextView
            android:id="@+id/tvDoanhThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="45dp"
            android:text="Doanh Thu :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDoanhThu" />

        <Button
            android:id="@+id/btnDoanhThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="34dp"
            android:text="Doanh Thu"
            app:layout_constraintStart_toStartOf="@+id/edDenNgay"
            app:layout_constraintTop_toBottomOf="@+id/edDenNgay" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>